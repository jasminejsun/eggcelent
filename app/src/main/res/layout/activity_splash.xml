<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/pale_yellow"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo_loading"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center|center_vertical"
        android:layout_marginTop="80dp"
        android:contentDescription="@string/eggcelent"
        app:srcCompat="@drawable/egg_sitting" />

    <TextView
        android:id="@+id/loading_screen_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/eggcelent"
        android:fontFamily="@font/gaegu_bold"
        android:textSize="40sp"
        android:textColor="@color/darker_brown"/>
</LinearLayout>